# YouTube Shorts Finder - 환경 변수 예시 파일
# 실제 값을 입력한 후 .env 파일로 복사하여 사용하세요

# 보안 키 (랜덤 문자열 생성 필요)
SECRET_KEY=your_secret_key_here

# 데이터베이스 URL
# 로컬 PostgreSQL 예시: postgresql://username:password@localhost:5432/database_name
# Railway/Heroku 등: 클라우드 서비스에서 제공하는 URL
DATABASE_URL=postgresql://username:password@localhost:5432/youtube_shorts_db

# Google OAuth 설정 (Google Cloud Console에서 생성)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# YouTube Data API 키 (콤마로 구분하여 여러 개 등록 가능)
YOUTUBE_API_KEY=your_youtube_api_key_1,your_youtube_api_key_2

# 이메일 서비스 설정 (Gmail SMTP 예시)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SENDER_EMAIL=your_email@gmail.com

# 개발 환경 설정
FLASK_ENV=dev
PORT=8080
FLASK_DEBUG=1

# OAuth 로컬 개발용 (HTTPS 요구사항 우회)
OAUTHLIB_INSECURE_TRANSPORT=1